<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor x:" />

    <TextView
        android:id="@+id/tvValorX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor y:" />

    <TextView
        android:id="@+id/tvValorY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/tvValorZ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor Z:" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:onClick="btMeusSensoresOnClick"
        android:text="Meus sensores" />

    <Button
        android:id="@+id/id_btnTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnVerValor"
        android:text="ver" />

    <TextView
        android:id="@+id/valorMaior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="10:00"
        android:textSize="25dp" />

    <Button
        android:id="@+id/countdown_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="start" />

</LinearLayout>